<script>

function scrollToJourney(){
document.getElementById("journey").scrollIntoView({behavior:'smooth'});
}

function toggleContent(el){
let content = el.querySelector(".timeline-content");
content.style.display = content.style.display === "block" ? "none" : "block";
}

function toggleMusic(){
const music = document.getElementById("bgMusic");
music.paused ? music.play() : music.pause();
}

function openLetter(){
const letter = `My dearest Amers,

Distance has tested us,
but it never weakened what we have.

You are my calm.
You are my strength.
You are my forever.

No matter the miles between us,
my heart has always belonged to you.`;

const el = document.getElementById("letterText");
el.style.display="block";
let i=0;
function type(){
if(i<letter.length){
el.innerHTML+=letter.charAt(i);
i++;
setTimeout(type,40);
}else{
document.getElementById("valentineArea").style.display="block";
}
}
type();
}

/* RUNNING NO BUTTON */
const noBtn=document.getElementById("noBtn");

noBtn.addEventListener("mouseover",function(){
let area=document.getElementById("valentineArea");
let maxX=area.offsetWidth-100;
let maxY=area.offsetHeight-50;

let randX=Math.random()*maxX;
let randY=Math.random()*maxY;

noBtn.style.left=randX+"px";
noBtn.style.top=randY+"px";
});

/* YES FLOWER EXPLOSION */
function flowerExplosion(){
for(let i=0;i<80;i++){
const flower=document.createElement("div");
flower.className="flower";
flower.innerHTML="üåπ";
flower.style.left=Math.random()*100+"vw";
flower.style.top="-20px";
document.body.appendChild(flower);
setTimeout(()=>flower.remove(),4000);
}
alert("You just made me the happiest husband alive ‚ù§Ô∏è");
}

/* HEART CURSOR */
document.addEventListener("mousemove",e=>{
const heart=document.createElement("div");
heart.className="heart";
heart.innerHTML="‚ù§";
heart.style.left=e.clientX+"px";
heart.style.top=e.clientY+"px";
document.body.appendChild(heart);
setTimeout(()=>heart.remove(),800);
});
</script>

